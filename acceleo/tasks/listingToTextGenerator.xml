<?xml version="1.0" encoding="UTF-8"?>
<project default="listingToTextGenerator" name="tdt4250.emfcourses.acceleo">
    <property name="ECLIPSE_HOME" value="../../../../../../../eclipse/dsl-2020-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../../../../eclipse-workspace"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="tdt4250.emfcourses.acceleo.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/tdt4250.emfcourses.acceleo/bin"/>
    </path>

    <path id="tdt4250.emfcourses.acceleo.classpath">
        <path refid="tdt4250.emfcourses.acceleo.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="tdt4250.emfcourses.acceleo.libraryclasspath.alljars">
        <pathelement location="../tdt4250.emfcourses.acceleo/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="tdt4250.emfcourses.acceleo.classpath.alljars">
        <path refid="tdt4250.emfcourses.acceleo.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="listingToTextGenerator">
        <java classname="tdt4250.emfcourses.acceleo.main.ListingToTextGenerator" classpathref="tdt4250.emfcourses.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="listingToTextGenerator.alljars">
        <java classname="tdt4250.emfcourses.acceleo.main.ListingToTextGenerator" classpathref="tdt4250.emfcourses.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
